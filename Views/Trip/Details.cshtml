@model NewVoyager.Models.Trips

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Trips</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TripName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TripName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateFrom)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateFrom)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateTo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateTo)
        </dd>
    </dl>
</div>

 <h2>Events</h2>
<!-- Add Event button -->
<div>
    <a asp-controller="Event" asp-action="Create" asp-route-tripId="@Model.TripID" class="btn btn-primary">Add Event</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Event Description</th>
            <th>Date From</th>
            <th>Date To</th>
            <!-- ... other columns ... -->
        </tr>
    </thead>
    <tbody>
    @foreach (var dogadjaj in Model.Events)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => dogadjaj.Opis)</td>
            <td>@Html.DisplayFor(modelItem => dogadjaj.DateFrom)</td>
            <td>@Html.DisplayFor(modelItem => dogadjaj.DateTo)</td>
            <!-- ... other cells ... -->
        </tr>
    }
    </tbody>
</table>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.TripID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
