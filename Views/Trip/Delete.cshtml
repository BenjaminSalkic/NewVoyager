@model NewVoyager.Models.Trips

@{
    ViewData["Title"] = "Delete";
}
<link rel="stylesheet" type="text/css" href="~/css/delete.css">

<div class="head">Are you sure you want to delete this?</div>
<hr />

<div class="delete-container">
    <dl class="row" >
        
        <dt class = "col-sm-12 element" style="text-align: center;">
            Trip
        </dt>
        <dt class = "col-sm-6 element" style="text-align: right;">
            Trip name:
        </dt>
        <dd class = "col-sm-6 element" style="text-align: left;">
            @Html.DisplayFor(model => model.TripName)
        </dd>
        <dt class = "col-sm-6 element" style="text-align: right;">
            Date from:
        </dt>
        <dd class = "col-sm-6 element" style="text-align: left;">
            @Html.DisplayFor(model => model.DateFrom)
        </dd>
        <dt class = "col-sm-6 element"style="text-align: right;">
           Date to:
        </dt>
        <dd class = "col-sm-6 element" style="text-align: left;">
            @Html.DisplayFor(model => model.DateTo)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="TripID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a href="javascript:history.back()" class="btn btn-secondary">Back</a>
    </form>
</div>
@if (ViewBag.DeleteSuccess == true)
{
    <script>
        window.addEventListener('DOMContentLoaded', (event) => {
            window.history.go(-2); // Go back to the previous page
        });
    </script>
}