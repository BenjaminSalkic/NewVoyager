@model NewVoyager.Models.Trips

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Trips</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TripName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TripName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateFrom)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateFrom)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateTo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateTo)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="TripID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a href="javascript:history.back()" class="btn btn-secondary">Back</a>
    </form>
</div>
@if (ViewBag.DeleteSuccess == true)
{
    <script>
        window.addEventListener('DOMContentLoaded', (event) => {
            alert('Your changes were saved successfully!'); // Optional: Display a message
            window.history.go(-2); // Go back to the previous page
        });
    </script>
}