@model NewVoyager.Models.Trips

@{
    ViewData["Title"] = "Edit";
}
<link rel="stylesheet" type="text/css" href="~/css/create.css">


<div class="head">
    Edit trip
</div>
<div class="row"> 
    <div class="col-md-4 create-form">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TripID" />
            <input type="hidden" asp-for="PlanID" />
            <div class="form-group">
                <label asp-for="TripName" class="control-label">Trip name</label>
                <input asp-for="TripName" class="form-control" />
                <span asp-validation-for="TripName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateFrom" class="control-label">Date from</label>
                <input asp-for="DateFrom" class="form-control" />
                <span asp-validation-for="DateFrom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateTo" class="control-label">Date to</label>
                <input asp-for="DateTo" class="form-control" />
                <span asp-validation-for="DateTo" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="form-group dugme col-6" style="text-align: right;">
                    <input type="submit" value="Save" class="btn " />
                </div>
                <div class="dugme col-6">
                    <a href="javascript:history.back()" class="btn btn-secondary">Back</a>
                </div>
            </div>
        </form>
    </div>
</div>

@if (ViewBag.EditSuccess == true)
{
    <script>
        window.addEventListener('DOMContentLoaded', (event) => {
            window.history.go(-2); // Go back to the previous page
        });
    </script>
}
